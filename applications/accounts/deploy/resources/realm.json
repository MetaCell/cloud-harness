                {{- if len $app.harness.accounts.users}}
                    {{- $j = add1 $j }}
                {{- end }}
                {{- range $i, $user := $app.harness.accounts.users }}{{if $i}},{{end}}
                {{ include "deploy_accounts_utils.user" (dict "root" $ "app" $app "user" $user) }}
                {{- end }}
              {{- end }}
              
            {{- end }}
        ],
        "roles": {
            "realm": [
                {
                    "id": "70835ad6-1454-4bc5-86a4-f1597e776b75",
